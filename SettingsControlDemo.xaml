<UserControl x:Class="FlagEventEmitter.SettingsControlDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlagEventEmitter"
             xmlns:styles="clr-namespace:SimHub.Plugins.Styles;assembly=SimHub.Plugins" mc:Ignorable="d" 
             xmlns:ui="clr-namespace:SimHub.Plugins.UI;assembly=SimHub.Plugins" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid>
        <styles:SHSection Title="Govee device options">
            <StackPanel>
                <Label>Device name:</Label>
                <TextBox x:Name="DeviceName"></TextBox>
                <Label>Govee API key:</Label>
                <PasswordBox x:Name="GoveeApiKey"></PasswordBox>
                <styles:SHButtonPrimary HorizontalAlignment="Left" Click="SHButtonPrimary_Click">Save Options</styles:SHButtonPrimary>
            </StackPanel>
        </styles:SHSection>
    </Grid>
</UserControl>
